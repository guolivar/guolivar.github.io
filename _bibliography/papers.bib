	journal = {Atmospheric Environment},
	author = {Doumbia, El Hadji Thierno and Liousse, Catherine and Galy-Lacaux, Corinne and Ndiaye, Seydi Ababacar and Diop, Babacar and Ouafo, Marie and Assamoi, Eric Michel and Gardrat, Eric and Castera, Pierre and Rosset, Robert and Akpo, Aristide and Sigha, Luc},
	month = jul,
	year = {2012},
	keywords = {PM2.5, Black carbon, traffic, Atmospheric pollution, Urban site},
	pages = {529--537},
	file = {ScienceDirect Snapshot:/home/gustavo/Zotero/storage/WMKVJFCU/S1352231012001203.html:text/html},
