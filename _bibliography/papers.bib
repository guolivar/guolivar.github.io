	journal = {International Journal of Hygiene and Environmental Health},
	author = {Wolkoff, Peder},
	keywords = {Measurements, Airway effects, Cardiovascular and pulmonary effects, Odour, Offices, Sensory irritation, Symptoms},
	file = {ScienceDirect Snapshot:/home/gustavo/Zotero/storage/HE5WQ5TP/S1438463912001046.html:text/html;wolkoff_indoor_air_pollutants_in_office.pdf:/home/gustavo/Zotero/storage/FJWB9TUF/wolkoff_indoor_air_pollutants_in_office.pdf:application/pdf},
