	journal = {Atmospheric Chemistry and Physics},
	author = {Sokhi, Ranjeet S. and Moussiopoulos, Nicolas and Baklanov, Alexander and Bartzis, John and Coll, Isabelle and Finardi, Sandro and Friedrich, Rainer and Geels, Camilla and Grönholm, Tiia and Halenka, Tomas and Ketzel, Matthias and Maragkidou, Androniki and Matthias, Volker and Moldanova, Jana and Ntziachristos, Leonidas and Schäfer, Klaus and Suppan, Peter and Tsegas, George and Carmichael, Greg and Franco, Vicente and Hanna, Steve and Jalkanen, Jukka-Pekka and Velders, Guus J. M. and Kukkonen, Jaakko},
