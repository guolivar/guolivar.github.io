	journal = {Journal of Transport \& Health},
	author = {Castillo, Maria and Kinney, Patrick},
	month = jun,
	year = {2018},
	pages = {S15--S16},
	file = {ScienceDirect Full Text PDF:/home/gustavo/Zotero/storage/VJV2VYNH/Castillo and Kinney - 2018 - 2350 - Field Testing a Low-Cost Sensor for Long-Te.pdf:application/pdf;ScienceDirect Snapshot:/home/gustavo/Zotero/storage/T9BPFB5K/S2214140518302548.html:text/html},
}

