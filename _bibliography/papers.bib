	urldate = {2019-02-13},
	journal = {Atmospheric Chemistry and Physics Discussions},
	author = {Chen, Ziyue and Chen, Danlu and Kwan, Meipo and Chen, Bin and Cheng, Nianliang and Gao, Bingbo and Zhuang, Yan and Li, Ruiyuan and Xu, Bing},
	month = jan,
	year = {2019},
	pages = {1--25},
	file = {Full Text PDF:/home/gustavo/Zotero/storage/H22K7F33/Chen et al. - 2019 - The control of anthropogenic emissions contributed.pdf:application/pdf;Snapshot:/home/gustavo/Zotero/storage/QQ3XJ6FH/acp-2018-1112.html:text/html},
