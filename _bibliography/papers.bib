	journal = {Environmental Science \& Technology},
	author = {Chen, Bing and Andersson, August and Lee, Meehye and Kirillova, Elena N. and Xiao, Qianfen and Kruså, Martin and Shi, Meinan and Hu, Ke and Lu, Zifeng and Streets, David G. and Du, Ke and Gustafsson, Örjan},
