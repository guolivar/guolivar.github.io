@article{fierce_when_2013,
	title = {When is cloud condensation nuclei activity sensitive to particle characteristics at emission?},
	copyright = {©2013. American Geophysical Union. All Rights Reserved.},
	issn = {2169-8996},
	url = {http://onlinelibrary.wiley.com/doi/10.1002/2013JD020608/abstract},
	doi = {10.1002/2013JD020608},
	abstract = {The cloud condensation nuclei (CCN) activity of an aerosol population depends on individual particles’ size and composition. However, these properties are modified shortly after emission by condensation of semi-volatile substances and coagulation withother particles. It is, therefore, unclear to what extent particle characteristics at emission affect CCN activity after aging by condensation and coagulation. We present a process-level analysis of particles emitted from a particular source, diesel engines, in which we isolate the separate effects of condensation and coagulation on the CCN activation of primary aerosol. We simulated aerosol dynamics in a polluted area with the Particle Monte Carlo (PartMC) model coupled to the Model for Simulating Aerosol Interactions and Chemistry (MOSAIC) and evaluated three factors influencing particle CCN activity shortly after emission: 1) particle characteristics at the time of emission, 2) aging conditions near the emission source, and 3) the water vapor supersaturation at which CCN activity is evaluated. CCN concentrations were sensitive to particle properties at emission only under specific environmental conditions. Diesel emissions did not strongly influence local CCN concentrations at low cloud supersaturation thresholds (s {\textless} 0.2\%), regardless of particle characteristics at emission or aging conditions. At higher supersaturation thresholds (s {\textless} 0.2\%) and under conditions of rapid secondary aerosol formation, changes in CCN concentrations showed a greater sensitivity to particles’ emission size than composition.},
	language = {en},
	urldate = {2013-12-01},
	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Fierce, Laura and Riemer, Nicole and Bond, Tami C.},
	year = {2013},
	keywords = {aerosol aging, aerosol lifecycle, cloud condensation nuclei, primary particles},
	pages = {n/a--n/a},
	file = {fierce_et_al_2013_when_is_cloud_condensation_nuclei_activity_sensitive_to_particle.pdf:/home/gustavo/Zotero/storage/BHM8MPR7/fierce_et_al_2013_when_is_cloud_condensation_nuclei_activity_sensitive_to_particle.pdf:application/pdf;Snapshot:/home/gustavo/Zotero/storage/MCP844P2/abstract\;jsessionid=6D93E48B162DD4DB562D565E583D8521.html:text/html},
