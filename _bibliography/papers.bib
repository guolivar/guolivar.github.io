	author = {Tryner, Jessica and L'Orange, Christian and Mehaffy, John and Miller-Lionberg, Daniel and Hofstetter, Josephine C. and Wilson, Ander and Volckens, John},
	month = oct,
	year = {2019},
	keywords = {Air quality, Particulate matter, Air pollution, Plantower, Ultrasonic personal aerosol sampler, UPAS},
	pages = {117067},
	file = {Full Text:/home/gustavo/Zotero/storage/YU4DCCIQ/Tryner et al. - 2020 - Laboratory evaluation of low-cost PurpleAir PM mon.pdf:application/pdf;ScienceDirect Snapshot:/home/gustavo/Zotero/storage/CEXRNUD2/S135223101930706X.html:text/html},
