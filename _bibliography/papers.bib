	journal = {Atmospheric Environment},
	author = {Hoek, Gerard and Meliefste, Kees and Cyrys, Josef and Lewné, Marie and Bellander, Tom and Brauer, Mike and Fischer, Paul and Gehring, Ulrike and Heinrich, Joachim and van Vliet, Patricia and Brunekreef, Bert},
