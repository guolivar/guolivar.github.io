@article{mois_performance_2018,
	title = {Performance {Evaluation} of {Energy}-{Autonomous} {Sensors} {Using} {Power}-{Harvesting} {Beacons} for {Environmental} {Monitoring} in {Internet} of {Things} ({IoT})},
