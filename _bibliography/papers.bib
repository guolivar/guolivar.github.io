	urldate = {2022-05-02},
	journal = {Atmospheric Measurement Techniques Discussions},
	author = {Chacón-Mateos, Miriam and Laquai, Bernd and Vogt, Ulrich and Stubenrauch, Cosima},
	month = apr,
	year = {2022},
	note = {Publisher: Copernicus GmbH},
	pages = {1--15},
	file = {Chacón-Mateos et al_2022_Evaluation of a Low-Cost Dryer for a Low-Cost Optical Particle Counter.pdf:/home/gustavo/Zotero/storage/2H3AXSFW/Chacón-Mateos et al_2022_Evaluation of a Low-Cost Dryer for a Low-Cost Optical Particle Counter.pdf:application/pdf;Snapshot:/home/gustavo/Zotero/storage/EYXY6CRY/amt-2022-119.html:text/html},
