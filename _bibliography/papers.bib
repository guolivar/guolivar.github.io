	author = {Kiesewetter, G. and Borken-Kleefeld, J. and Schöpp, W. and Heyes, C. and Thunis, P. and Bessagnet, B. and Terrenoire, E. and Amann, M.},
	month = jul,
	year = {2014},
	note = {00000},
	pages = {18315--18354},
	file = {Atmos. Chem. Phys. Discuss. Snapshot:/home/gustavo/Zotero/storage/N9BKK6VZ/2014.html:text/html;Kiesewetter et al_2014_Modelling street level PM10 concentrations across Europe.pdf:/home/gustavo/Zotero/storage/CVQEPW25/Kiesewetter et al_2014_Modelling street level PM10 concentrations across Europe.pdf:application/pdf},
