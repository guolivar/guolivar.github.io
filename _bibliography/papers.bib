	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Levy, Hiram and Horowitz, Larry W. and Schwarzkopf, M. Daniel and Ming, Yi and Golaz, Jean-Christophe and Naik, Vaishali and Ramaswamy, V.},
