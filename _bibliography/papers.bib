	pages = {4383--4396},
	file = {Atmos. Chem. Phys. Snapshot:/home/gustavo/Zotero/storage/GJGEU38H/2014.html:text/html;Kyrö et al_2014_Trends in new particle formation in eastern Lapland, Finland.pdf:/home/gustavo/Zotero/storage/QMCX9WWA/Kyrö et al_2014_Trends in new particle formation in eastern Lapland, Finland.pdf:application/pdf},
