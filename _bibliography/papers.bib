	journal = {Atmos. Chem. Phys.},
	author = {Setyan, A. and Song, C. and Merkel, M. and Knighton, W. B. and Onasch, T. B. and Canagaratna, M. R. and Worsnop, D. R. and Wiedensohler, A. and Shilling, J. E. and Zhang, Q.},
	month = jul,
