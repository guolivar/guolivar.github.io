	journal = {Atmos. Chem. Phys.},
	author = {Brines, M. and Dall'Osto, M. and Beddows, D. C. S. and Harrison, R. M. and Gómez-Moreno, F. and Núñez, L. and Artíñano, B. and Costabile, F. and Gobbi, G. P. and Salimi, F. and Morawska, L. and Sioutas, C. and Querol, X.},
