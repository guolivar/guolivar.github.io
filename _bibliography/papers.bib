	journal = {Atmos. Chem. Phys.},
	author = {Presto, A. A. and Gordon, T. D. and Robinson, A. L.},
	month = may,
	year = {2014},
	note = {00000},
	pages = {5015--5036},
	file = {Atmos. Chem. Phys. Snapshot:/home/gustavo/Zotero/storage/K7KP38BM/2014.html:text/html;Presto et al_2014_Primary to secondary organic aerosol.pdf:/home/gustavo/Zotero/storage/C3MEU3GM/Presto et al_2014_Primary to secondary organic aerosol.pdf:application/pdf},
