	urldate = {2022-05-03},
	journal = {Atmospheric Environment},
	author = {Kaskaoutis, D. G. and Grivas, G. and Oikonomou, K. and Tavernaraki, P. and Papoutsidaki, K. and Tsagkaraki, M. and Stavroulas, I. and Zarmpas, P. and Paraskevopoulou, D. and Bougiatioti, A. and Liakakou, E. and Gavrouzou, M. and Dumka, U. C. and Hatzianastassiou, N. and Sciare, J. and Gerasopoulos, E. and Mihalopoulos, N.},
	month = may,
