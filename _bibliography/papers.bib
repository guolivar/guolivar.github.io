	number = {9},
	urldate = {2018-09-17},
	journal = {Sensors},
	author = {Idrees, Zeba and Zou, Zhuo and Zheng, Lirong and Idrees, Zeba and Zou, Zhuo and Zheng, Lirong},
	month = sep,
	year = {2018},
	keywords = {air pollution monitoring, edge computing, electrochemical gas sensors, IoT, pollution sensors},
	pages = {3021},
	file = {Full Text PDF:/home/gustavo/Zotero/storage/HG2YX2QV/Idrees et al. - 2018 - Edge Computing Based IoT Architecture for Low Cost.pdf:application/pdf;Snapshot:/home/gustavo/Zotero/storage/2QMN62C2/3021.html:text/html},
}

@article{picornell_population_2018,
