	journal = {Atmospheric Pollution Research},
	author = {van Beest, M. R. R. S. and Arpino, F. and Hlinka, O. and Sauret, E. and van Beest, N. R. T. P. and Humphries, R. S. and Buonanno, G. and Morawska, L. and Governatori, G. and Motta, N.},
	month = jun,
