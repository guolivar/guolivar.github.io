	journal = {Atmos. Chem. Phys.},
	author = {Yttri, K. E. and Lund Myhre, C. and Eckhardt, S. and Fiebig, M. and Dye, C. and Hirdman, D. and Ström, J. and Klimont, Z. and Stohl, A.},
